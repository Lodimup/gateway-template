    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "program": "${workspaceFolder}/.venv/bin/fastapi",
            "args": [
                "dev",
                "serve_fastapi.py"
            ],
            "envFile": "${workspaceFolder}/.env",
            "jinja": true
        },
        {
            "name": "Python: Hypercorn (Django ASGI)",
            "type": "debugpy",
            "request": "launch",
            "cwd": "${workspaceFolder}/app",
            "program": "${workspaceFolder}/.venv/bin/hypercorn",
            "args": [
                "app.asgi:application",
                "--reload",
                "-b",
                "0.0.0.0:8000"
            ],
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "django": false
        },
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/manage.py",
            "args": [
                "runserver"
            ],
            "envFile": "${workspaceFolder}/.env",
            "django": true,
            "justMyCode": true
        },
    ]
}